    <!-- Splash Screen theme. -->

    <style name="segment_radioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:fontFamily">@font/mon_medium</item>
    </style>


    <style name="TextAppearance.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>
    <style name="TextAppearance.Title.SemiBold" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/opensand_semibold</item>
    </style>

    <style name="TextAppearance.Title.Light" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.Medium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.Medium.Semi" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/opensand_semibold</item>
    </style>

    <style name="TextAppearance.Medium.Bold" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>
    <style name="TextAppearance.Small.Light" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.SmallMore.Light" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>


    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

</resources>
